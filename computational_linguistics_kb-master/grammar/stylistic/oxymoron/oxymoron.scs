oxymoron
	<- sc_node_not_relation;
	<- stylistic_device;

	=> nrel_main_idtf:
			[оксюморон](* <- lang_ru;; *);
			[oxymoron](* <- lang_en;; *);
	
	-> rrel_example: ...
		(*
			=> nrel_main_idtf:
					[Мертвые души](* <- lang_ru;; *);
					[Dead Souls](* <- lang_en;; *);;
		*);

	<- rrel_key_sc_element: definition_oxymoron
		(*
			<- definition;;
			=> nrel_main_idtf:
					[Опр. (оксюморон)](* <- lang_ru;; *);
					[Опр. (oxymoron)](* <- lang_en;; *);;
			<= nrel_sc_text_translation: ...
				(*
					-> rrel_example:
						[Оксюморон - стилистическая фигура или стилистическая ошибка — сочетание слов с противоположным значением (то есть сочетание несочетаемого).](* <- lang_ru;; *);
						[Oxymoron is a stylistic figure or a stylistic mistake - a combination of words with an opposite meaning (that is, a combination of the incompatible).](* <- lang_en;; *);;
				*);;
		*);

	<- rrel_key_sc_element: ...
		(* 
				<- explanation;; 
				=> nrel_main_idtf:
					[Утв. (оксюморон)](* <- lang_ru;; *);
					[Expl. (oxymoron)](* <- lang_en;; *);;
				<- nrel_sc_text_translation: ...
						(*
							-> rrel_example: 
									[Для оксюморона характерно намеренное использование противоречия для создания стилистического эффекта.](* <-lang_ru;; *);
									[Oxymoron is characterized by deliberately using controversy to create a stylistic effect.](* <- lang_en;; *);;
						*);;
		*);;